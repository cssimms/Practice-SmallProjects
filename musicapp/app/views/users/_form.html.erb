<!-- user, url, method, button -->

<form action="<%= url %>" method="post">
  <input
    type="hidden"
    name="_method"
    value="<%= method %>">

  <input
    type="hidden"
    name="authenticity_token"
    value=" <%= form_authenticity_token %>">

  <%= flash.now[:errors] %><br>

  <label for="email">Email Address</label><br>
  <input
      type="text"
      name="user[email]"
      id="email"><br><br><br>


  <label for="pass">Password</label><br>
  <input
      type="password"
      name="user[password]"
      id="pass"><br><br><br>

  <input type="submit" value="<%= button %>">
</form>
