<!-- name, url, method, button -->

<form action="<%= url %>" method="post">
  <input
    type="hidden"
    name="_method"
    value="<%= method %>">

  <input
    type="hidden"
    name="authenticity_token"
    value=" <%= form_authenticity_token %>">

  <%= flash.now[:errors] %><br>

  <label for="band_name">Band Name</label><br>
  <input
      type="text"
      name="band[name]"
      id="band_name"><br><br><br>

  <input type="submit" value="<%= button %>">
</form>
